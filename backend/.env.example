# Database
DATABASE_URL=postgresql://user:password@localhost:5432/zero_emissions

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=ZERO Emissions Tracking API
VERSION=1.0.0
DEBUG=True

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# External APIs
EPA_API_KEY=your-epa-api-key
DEFRA_API_KEY=your-defra-api-key

# Report Storage
REPORTS_STORAGE_PATH=./storage/reports
MAX_UPLOAD_SIZE_MB=50

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
